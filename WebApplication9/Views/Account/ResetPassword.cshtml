@model IdentitySample.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<h2>Reset your password</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Code)

        <div class="configure-create-account">

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.TextBoxFor(m => m.Email, new { @class = "custom-input form-control inp-b", autocomplete = "off", spellcheck = "false" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.PasswordFor(m => m.Password, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="configure-control">
            <span>
                <input type="submit" value="Reset" class="btn-mnu btn-default" />
            </span>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
