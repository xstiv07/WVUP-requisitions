@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Create User Account";
}

<h2>Create User Account Manually</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="configure-create-account">

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.TextBoxFor(model => model.Email, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(model => model.First_Name, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.TextBoxFor(model => model.First_Name, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(model => model.Last_Name, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.TextBoxFor(model => model.Last_Name, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.PasswordFor(model => model.Password, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row-main-inline">
                <span>*</span>
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label" })
                <div class="row-contents">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "custom-input form-control inp-b" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

    <div class="form-group">
        <label>Select User Roles:</label>
        <div>
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </div>
    </div>

    <div class="configure-control">
        <span>
            <input type="submit" value="Create" class="btn-mnu btn-default" />
        </span>
        <a href="@Url.Action("Index")">
            <span>
                <span class="btn-mnu btn-custom">Back To List</span>
            </span>
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}