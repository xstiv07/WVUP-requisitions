@model IEnumerable<WebApplication9.Data.Account>

@section AddToHead{
    @Styles.Render("~/Content/datatables")
}
<table class="data-table display" id="data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.String)
            </th>
            <th>
                @Html.DisplayName("DA Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="datatable-nosort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.String)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fund.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Division.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditAccount", new { id = item.Id })
                </td>
            </tr>
        }
</table>

<div class="configure-control">
    <a href="@Url.Action("CreateAccount")">
        <span>
            <span class="btn-mnu btn-default">New Account</span>
        </span>
    </a>

    <a href="@Url.Action("Index")">
        <span>
            <span class="btn-mnu btn-custom">Back To List</span>
        </span>
    </a>
</div>


@Scripts.Render("~/bundles/datatables")

<script>
    $(document).ready(function () {
        $('#data-table').DataTable({
            columnDefs: [{
                targets: "datatable-nosort",
                orderable: false
            }]
        });
    });
</script>