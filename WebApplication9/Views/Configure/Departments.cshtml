@model IEnumerable<WebApplication9.Data.Department>
@Styles.Render("~/Content/datatables")

<table class="data-table display" id="data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerId)
            </th>
            <th class="datatable-nosort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Division.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.First_Name) @Html.DisplayFor(modelItem => item.User.Last_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditDepartment", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="configure-control">
    <a href="@Url.Action("CreateDepartment")">
        <span>
            <span class="btn-mnu btn-default">New Department</span>
        </span>
    </a>

    <a href="@Url.Action("Index")">
        <span>
            <span class="btn-mnu btn-custom">Back To List</span>
        </span>
    </a>
</div>

@Scripts.Render("~/bundles/datatables")

<script>
    $(document).ready(function () {
        $('#data-table').DataTable({
            columnDefs: [{
                targets: "datatable-nosort",
                orderable: false
            }]
        });
    });
</script>